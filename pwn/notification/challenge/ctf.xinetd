service ctf
{
    disable = no
    socket_type = stream
    protocol    = tcp
    wait        = no
    user        = ctf
    type        = UNLISTED
    port        = 1337
    bind        = 0.0.0.0
    server      = /ctf/run.sh
    banner_fail = /etc/banner_fail
    # Options below are for safety mainly
    #per_source  = 10 # max instances per source at once
    rlimit_cpu  = 20 # max cpu seconds
    #rlimit_as  = 1024M # addr space resource limit
}

